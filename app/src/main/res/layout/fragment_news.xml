<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/black"
    tools:context=".fragment.NewsFragment">

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/news"
        android:fontFamily="@font/raleway_bold"
        android:textColor="@color/white"
        android:textSize="28sp"
        android:layout_marginTop="100dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>


    <ImageView
        android:id="@+id/image"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:src="@drawable/everest_mountain"
        android:scaleType="centerCrop"
        android:layout_marginTop="35dp"
        android:layout_marginEnd="10dp"
        android:layout_marginStart="10dp"
        app:layout_constraintTop_toBottomOf="@id/title" />

    <TextView
        android:id="@+id/text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:textColor="@color/black"
        android:paddingTop="10sp"
        android:layout_marginEnd="10dp"
        android:layout_marginStart="10dp"
        android:padding="10dp"
        android:textSize="15sp"
        android:fontFamily="@font/raleway_light"
        android:text="@string/mount_everest_is_earth_s_highest_mountain_above_sea_level_located_in_the_mahalangur_himal_sub_range_of_the_himalayas_the_china_nepal_border_runs_across_its_summit_point_its_elevation_of_8_848_86_m_was_most_recently_established_in_2020_by_the_nepali_and_chinese_authorities"
        app:layout_constraintTop_toBottomOf="@id/image"
        />

    <Button
        android:layout_width="120dp"
        android:layout_height="40dp"
        android:layout_marginTop="40dp"
        android:text="@string/get_location"
        android:textAllCaps="false"
        android:fontFamily="@font/raleway_regular"
        android:background="@drawable/question_btn_bg_ai"
        app:layout_constraintTop_toBottomOf="@id/text"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />



</androidx.constraintlayout.widget.ConstraintLayout>